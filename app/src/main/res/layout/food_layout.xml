<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/food_thumbnail_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/food_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NULL"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/food_thumbnail_iv"
        app:layout_constraintTop_toTopOf="@id/food_thumbnail_iv"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/food_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/food_thumbnail_iv"
        app:layout_constraintStart_toEndOf="@id/food_thumbnail_iv"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/food_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 000"
        android:textSize="24sp"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/food_thumbnail_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>